<%= form_with(model: record, local: true) do |form| %>
  <% if record.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(record.errors.count, "error") %> prohibited this record from being saved:</h2>

      <ul>
      <% record.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :day %>
    <%= form.date_select :day %>
  </div>

  <div class="field">
    <%= form.label :height %>
    <%= form.text_field :height %>
  </div>

  <div class="field">
    <%= form.label :weight %>
    <%= form.text_field :weight %>
  </div>

  <div class="field">
    <%= form.label :bmi %>
    <%= form.text_field :bmi %>
  </div>

  <div class="field">
    <%= form.label :daycalorie %>
    <%= form.number_field :daycalorie %>
  </div>

  <div class="field">
    <%= form.label :highblood %>
    <%= form.number_field :highblood %>
  </div>

  <div class="field">
    <%= form.label :lowblood %>
    <%= form.number_field :lowblood %>
  </div>

  <div class="field">
    <%= form.label :diary %>
    <%= form.text_area :diary %>
  </div>

  <div class="field">
    <%= form.label :picture %>
    <%= form.file_field :picture, id: :record_picture %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
